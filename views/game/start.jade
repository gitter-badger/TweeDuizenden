extends ../layout

block content
  form(role='form', method='POST', action='/game/save')

    .page-header
      .pull-right
        button.btn.btn-primary(type='submit')
          span.glyphicon.glyphicon-floppy-disk
          | Save Game
      h3 Start Game 
        small #{name}

    input(name='name', type='hidden', value=name)
    input(name='players', type='hidden', value=players)

    if players
      table.table.table-hover.table-condensed
        thead
          tr
            th #
            th Dealer
            th Wild
            each player in players
              th= player
        tbody
          - for (var i = 0; i < 20; i++) {
            tr.active
              th
                span= i+1
              td
                p.form-control-static.input-sm= players[i % players.length]
              td
                - var wildOptions = ["-", "A", "K", "Q", "J", 10, 9, 8, 7, 6, 5, 4];
                select.form-control.input-sm.text-center(name='wild')
                  each wildOption in wildOptions
                    option(selected=wild[i]===wildOption) #{wildOption}
              each player, index in players
                td
                  input.form-control.input-sm.text-center(
                    name='player-'+index,
                    class='g2000n-value g2000n-player-'+index,
                    type='number',
                    data-player-index=index,
                    value=score[player]&&score[player][i])
            if i!=0
              tr
                th
                td
                td
                each player, index in players
                  td
                    .input-group
                      input.form-control.input-sm.text-center(
                        class='g2000n-sum g2000n-player-'+index,
                        type='text',
                        disabled=true,
                        data-player-index=index)
                      span.input-group-addon +
          - }

    p.text-right
      button.btn.btn-primary(type='submit')
        span.glyphicon.glyphicon-floppy-disk
        | Save Game


block scripts
  script(src='/js/tweeduizenden.js')